# Required for encrypting stored check-in records (set long random secret)
CHECKIN_ENCRYPTION_KEY=

# Required for stable email hashing and attendee lookup (set long random secret)
CHECKIN_EMAIL_HASH_PEPPER=

# Required to access /api/checkin/report and /check-in/report
CHECKIN_REPORT_TOKEN=

# Recommended for production rate limiting and shared storage across serverless instances
KV_REST_API_URL=
KV_REST_API_TOKEN=

# Optional: override default attendee hash file
# ATTENDEE_HASHES_PATH=data/attendees-hashes.json

# Optional: local fallback data file path when KV is not configured
# CHECKIN_FILE_STORE_PATH=.checkin-data/checkins.json

# Optional: AI theme categorization for obstacle clustering (falls back to heuristics if not set)
# OPENROUTER_API_KEY=
# OPENROUTER_MODEL=openai/gpt-4o-mini
# OPENROUTER_OPENCLAW_CONTEXT=Custom context block for theme grouping prompt
